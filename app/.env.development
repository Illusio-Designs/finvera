# ============================================
# Development Environment Configuration
# ============================================

NODE_ENV=development

# API Configuration - Local Development
EXPO_PUBLIC_API_URL=http://192.168.0.103:3000/api
EXPO_PUBLIC_API_BASE_URL=http://192.168.0.103:3000
EXPO_PUBLIC_UPLOADS_BASE_URL=http://192.168.0.103:3000

# Alternative for localhost (only works in simulator)
# EXPO_PUBLIC_API_URL=http://localhost:3000/api
# EXPO_PUBLIC_API_BASE_URL=http://localhost:3000
# EXPO_PUBLIC_UPLOADS_BASE_URL=http://localhost:3000

# Security Configuration
EXPO_PUBLIC_PAYLOAD_ENCRYPTION_KEY=finvera-default-encryption-key-change-this-in-production

# Debug Settings
EXPO_PUBLIC_ENABLE_DEBUG_MODE=true
EXPO_PUBLIC_DEBUG_API_CALLS=true
EXPO_PUBLIC_DEBUG_PERMISSIONS=true
EXPO_PUBLIC_DEBUG_NAVIGATION=false

# Feature Flags
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_LOCATION_SERVICES=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false
EXPO_PUBLIC_USE_MOCK_DATA=false

# Network Configuration
EXPO_PUBLIC_REQUEST_TIMEOUT=30000
EXPO_PUBLIC_MAX_RETRY_ATTEMPTS=3
EXPO_PUBLIC_RETRY_DELAY=1000
EXPO_PUBLIC_REQUIRE_HTTPS=false