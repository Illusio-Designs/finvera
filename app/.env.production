# ============================================
# Production Environment Configuration
# ============================================

NODE_ENV=production

# API Configuration - Production
EXPO_PUBLIC_API_URL=https://api.finvera.solutions/api
EXPO_PUBLIC_API_BASE_URL=https://api.finvera.solutions
EXPO_PUBLIC_UPLOADS_BASE_URL=https://api.finvera.solutions

# Security Configuration
EXPO_PUBLIC_PAYLOAD_ENCRYPTION_KEY=your-production-encryption-key-change-this
EXPO_PUBLIC_REQUIRE_HTTPS=true

# Debug Settings (Disabled in Production)
EXPO_PUBLIC_ENABLE_DEBUG_MODE=false
EXPO_PUBLIC_DEBUG_API_CALLS=false
EXPO_PUBLIC_DEBUG_PERMISSIONS=false
EXPO_PUBLIC_DEBUG_NAVIGATION=false

# Feature Flags
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_LOCATION_SERVICES=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true
EXPO_PUBLIC_USE_MOCK_DATA=false

# Network Configuration
EXPO_PUBLIC_REQUEST_TIMEOUT=30000
EXPO_PUBLIC_MAX_RETRY_ATTEMPTS=3
EXPO_PUBLIC_RETRY_DELAY=1000

# Third-Party Services (Production Keys)
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key
EXPO_PUBLIC_RAZORPAY_KEY_ID=your-production-razorpay-key-id
EXPO_PUBLIC_ANALYTICS_API_KEY=your-production-analytics-api-key
EXPO_PUBLIC_SENTRY_DSN=your-production-sentry-dsn