# Server
NODE_ENV=development
PORT=3000

# Database - Root credentials for database operations
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=

# Master Database (stores tenant metadata)
MASTER_DB_NAME=finvera_master

# Multi-Tenant Configuration
# Use separate database users for each tenant (recommended for production)
USE_SEPARATE_DB_USERS=false
# Maximum number of tenant connections to cache
MAX_TENANT_CONNECTIONS=50

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Third-Party API Configuration (Sandbox - All-in-One Tax Compliance Platform)
# Sandbox provides: E-Invoice, E-Way Bill, HSN, GST, TDS APIs
# Get your API key from: https://sandbox.co.in
# Documentation: https://developer.sandbox.co.in

# Sandbox API Base URL (default for all services)
SANDBOX_API_URL=https://api.sandbox.co.in
SANDBOX_API_KEY=your_sandbox_api_key_here

# Service-specific URLs (optional - defaults to SANDBOX_API_URL if not set)
EINVOICE_API_URL=https://api.sandbox.co.in
EWAYBILL_API_URL=https://api.sandbox.co.in
HSN_API_URL=https://api.sandbox.co.in
GST_API_URL=https://api.sandbox.co.in
TDS_API_URL=https://api.sandbox.co.in

# Email (optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@finvera.com

# Notifications
# Storage type: 'local' (database) or 'external' (future: Redis, etc.)
NOTIFICATION_STORAGE_TYPE=local
# Enable email notifications (requires SMTP configuration)
ENABLE_EMAIL_NOTIFICATIONS=false
# Enable in-app notifications (always enabled when using local storage)
ENABLE_IN_APP_NOTIFICATIONS=true
# High commission alert threshold (in rupees)
HIGH_COMMISSION_THRESHOLD=100000
# Target deadline warning days (send warning when X days remaining)
TARGET_DEADLINE_WARNING_DAYS=3
# Target pending notification days (send notification when X days before deadline)
TARGET_PENDING_NOTIFICATION_DAYS=7
# Subscription renewal reminder days (send reminder when X days before expiry)
SUBSCRIPTION_RENEWAL_REMINDER_DAYS=7

# Encryption (for tenant database passwords)
ENCRYPTION_KEY=your-encryption-key-change-in-production-must-be-32-chars

# Payload encryption key (for API request/response encryption)
PAYLOAD_ENCRYPTION_KEY=your-very-strong-secret-key-at-least-32-characters-long

# Session (for OAuth flow)
SESSION_SECRET=your-session-secret-change-in-production

# Google OAuth
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID and add authorized redirect URIs:
#   Development: http://localhost:3000/api/auth/google/callback
#   Production: https://api.finvera.solutions/api/auth/google/callback (or your API domain)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
# Optional: Full callback URL (if not set, will be auto-generated based on domain)
# GOOGLE_CALLBACK_URL=/api/auth/google/callback
# Optional: API domain for production (if not set, uses api.{MAIN_DOMAIN})
# API_DOMAIN=api.finvera.solutions

# Domain Configuration
# Main domain for the application (used for subdomain routing and OAuth callbacks)
MAIN_DOMAIN=finvera.solutions
# Frontend URL (used for OAuth redirects)
FRONTEND_URL=http://localhost:3001
# CORS allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# FinBox API Configuration
# FinBox provides: Credit Scoring, Loan Eligibility, Bank Statement Analysis, Device Intelligence
# Get your API key from: https://finbox.in
# Documentation: https://docs.finbox.in

# FinBox API Base URL
FINBOX_API_URL=https://api.finbox.in
# FinBox Insights API Base URL (for DeviceConnect)
FINBOX_INSIGHTS_API_URL=https://insights.finbox.in
# FinBox API Key (Server API Key)
FINBOX_API_KEY=your_finbox_api_key_here
# FinBox Server Hash (optional, required for some operations)
FINBOX_SERVER_HASH=your_finbox_server_hash_here
