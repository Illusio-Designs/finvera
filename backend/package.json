{
  "name": "finvera-backend",
  "version": "1.0.0",
  "description": "Multi-tenant accounting SaaS backend",
  "main": "server.js",
  "scripts": {
    "start": "node --max-old-space-size=4096 --expose-gc server.js",
    "start:railway": "node --max-old-space-size=512 --expose-gc server.js",
    "dev": "nodemon --exec \"node --max-old-space-size=4096 --expose-gc\" server.js",
    "migrate": "sequelize db:migrate",
    "migrate:undo": "sequelize db:migrate:undo",
    "seed": "sequelize db:seed:all",
    "seed:undo": "sequelize db:seed:undo:all",
    "seed:test-data": "node scripts/clear-test-data.js && node scripts/seed-test-data.js && node scripts/create-default-ledgers.js && node scripts/fix-company-provisioning.js",
    "verify:test-user": "node scripts/verify-user-company.js",
    "verify:test-data": "node scripts/verify-test-data.js",
    "verify:ledgers": "node scripts/check-default-ledgers.js",
    "db:init": "node scripts/fresh-database-setup.js",
    "db:verify": "node scripts/verify-tables.js",
    "db:fix": "node scripts/fix-database-structure.js",
    "db:fresh": "node scripts/drop-all-tables.js && npm run db:init",
    "railway:postdeploy": "node scripts/railway-postdeploy.js",
    "railway:check-storage": "node scripts/check-railway-storage.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "csv-parser": "^3.0.0",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "node-cron": "^4.2.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "puppeteer": "^22.0.0",
    "razorpay": "^2.9.6",
    "redis": "^5.10.0",
    "sequelize": "^6.37.7",
    "socket.io": "^4.7.2",
    "uuid": "^11.0.3",
    "winston": "^3.19.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "sequelize-cli": "^6.6.3"
  }
}
