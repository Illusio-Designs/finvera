# Electron Environment Variables
# Copy this file to .env.electron for Electron-specific configuration

# API Configuration
API_URL=http://localhost:3001/api
MAIN_DOMAIN=localhost

# Electron Build Configuration
ELECTRON_BUILD=false

# Development Settings
# Port for Next.js dev server (used by Electron)
PORT=3000

# Enable/Disable DevTools in production builds
ENABLE_DEVTOOLS=false

# Auto-update configuration (optional)
# AUTO_UPDATE_SERVER=https://your-update-server.com
# AUTO_UPDATE_CHANNEL=stable

# Deep linking configuration
CUSTOM_PROTOCOL=finvera

# Window settings
DEFAULT_WINDOW_WIDTH=1400
DEFAULT_WINDOW_HEIGHT=900
MIN_WINDOW_WIDTH=800
MIN_WINDOW_HEIGHT=600
