{
  "name": "finvera-frontend",
  "version": "1.0.0",
  "description": "Finvera Multi-Tenant Accounting SaaS Frontend",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "cross-env NEXT_TELEMETRY_DISABLED=1 next dev -p 3001",
    "dev:turbo": "cross-env NEXT_TELEMETRY_DISABLED=1 next dev --turbo -p 3001",
    "build": "next build",
    "start": "next start -p 3001",
    "lint": "next lint",
    "electron": "wait-on http://localhost:3001 && electron .",
    "electron:dev": "concurrently \"cross-env NEXT_TELEMETRY_DISABLED=1 next dev -p 3001\" \"wait-on http://localhost:3001 && electron .\"",
    "electron:build": "cross-env ELECTRON_BUILD=true next build && electron-builder",
    "electron:build:mac": "cross-env ELECTRON_BUILD=true next build && electron-builder --mac",
    "electron:build:win": "cross-env ELECTRON_BUILD=true next build && electron-builder --win",
    "electron:build:all": "cross-env ELECTRON_BUILD=true next build && electron-builder --mac --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "crypto-js": "^4.2.0",
    "js-cookie": "^3.0.5",
    "next": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^5.5.0",
    "react-quill": "^2.0.0",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.finvera.app",
    "productName": "Finvera",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "package.json",
      "!node_modules/**/*"
    ],
    "asarUnpack": [
      ".next/standalone/**/*",
      ".next/static/**/*"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "standalone",
        "filter": ["**/*"]
      },
      {
        "from": ".next/static",
        "to": "static",
        "filter": ["**/*"]
      },
      {
        "from": "public",
        "to": "public",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "public/Fav Icon/Fav_Dark_PNG@4x.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "public/Fav Icon/Fav_Dark_PNG@4x.png",
      "publisherName": "Finvera"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Office"
    }
  }
}
