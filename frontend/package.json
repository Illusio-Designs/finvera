{
  "name": "finvera-desktop",
  "version": "1.0.0",
  "description": "Finvera - Complete GST & Accounting Desktop Software",
  "author": {
    "name": "Finvera Solutions",
    "email": "support@finvera.com"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "dev": "cross-env NEXT_TELEMETRY_DISABLED=1 next dev -p 3001",
    "dev:electron": "cross-env NEXT_TELEMETRY_DISABLED=1 next dev -p 3002",
    "build": "next build",
    "start": "next start -p 3001",
    "electron": "electron .",
    "electron:dev": "node scripts/dev-electron.js",
    "electron:build": "node scripts/build-electron.js",
    "electron:build-unsigned": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && node scripts/build-electron-unsigned.js",
    "electron:dist": "cross-env ELECTRON_BUILD=true NODE_ENV=production npm run build && electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "crypto-js": "^4.2.0",
    "framer-motion": "^12.23.26",
    "gsap": "^3.14.2",
    "html2canvas": "^1.4.1",
    "js-cookie": "^3.0.5",
    "jspdf": "^3.0.4",
    "next": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^5.5.0",
    "react-quill": "^2.0.0",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^2.0.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3"
  },
  "build": {
    "appId": "com.finvera.desktop",
    "productName": "Finvera",
    "copyright": "Copyright Â© 2025 Finvera Solutions",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "public/Fav Icon/Fav_White_PNG@4x.png",
      "certificateFile": "electron/assets/finvera-test-cert.pfx",
      "certificatePassword": "finvera123",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "signDlls": false
    },
    "portable": {
      "artifactName": "Finvera-${version}.exe"
    },
    "compression": "store",
    "removePackageScripts": true,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "electronDownload": {
      "cache": "./electron-cache"
    },
    "forceCodeSigning": false
  }
}
